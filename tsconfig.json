{
  "compilerOptions": {
    "outDir": "./build/static/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@locales/*": ["locales/*"],
      "@styles/*": ["styles/*"]
    },
    "lib": ["dom", "es2016", "es2017.object"]
  },
  "include": ["src/**/*", "typings/*"],
  "exclude": ["node_modules", "src/**/*.spec/*"]
}
